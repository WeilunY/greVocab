<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wy.gre_vocab.dao.WordMapper">
    
    <resultMap id="resultMap" type="com.wy.gre_vocab.entity.Word">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="word" jdbcType="VARCHAR" property="word"/>
        <result column="chin_def" jdbcType="VARCHAR" property="chin_def"/>
        <result column="favorite" jdbcType="INTEGER" property="favorite"/>
    </resultMap>

    <select id="selectWords" resultType="com.wy.gre_vocab.entity.Word">
        SELECT * FROM vocab
        WHERE id in
        <foreach collection="list" index="index" open="(" item="item" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <update id="toggleFav">
        UPDATE vocab
        SET favorite = #{favorite}
        WHERE id = #{id}
    </update>


</mapper>